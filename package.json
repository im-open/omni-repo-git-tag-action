{
  "name": "omni-repo-git-tag-action",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "npm ci && esbuild src/index.js --bundle --platform=node --outfile=dist/index.js",
    "bundle": "esbuild src/index.js --bundle --platform=node --outfile=dist/index.js",
    "format": "prettier --write **/*.js",
    "format-check": "prettier --check **/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "npm run format-check"
    }
  },
  "author": "wtw",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.12.2",
    "husky": "^4.3.8",
    "prettier": "^2.3.0"
  }
}
